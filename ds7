#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Node {
    char booking[50];
    struct Node *next;
};

struct Node *front = NULL;
struct Node *rear = NULL;


void insertBooking(char name[]) {
    struct Node *newNode = (struct Node *)malloc(sizeof(struct Node));
    strcpy(newNode->booking, name);
    newNode->next = NULL;

    if (rear == NULL) {
        front = rear = newNode;
    } else {
        rear->next = newNode;
        rear = newNode;
    }
    printf("Booking added: %s\n", name);
}


void processBooking() {
    if (front == NULL) {
        printf("No booking requests to process\n");
        return;
    }

    struct Node *temp = front;
    printf("Processed booking: %s\n", temp->booking);
    front = front->next;

    if (front == NULL)
        rear = NULL;

    free(temp);
}


void displayBookings() {
    if (front == NULL) {
        printf("No pending bookings\n");
        return;
    }

    struct Node *temp = front;
    printf("Pending Bookings:\n");
    while (temp != NULL) {
        printf("%s\n", temp->booking);
        temp = temp->next;
    }
}

int main() {
    int choice;
    char name[50];

    while (1) {
        printf("\n--- Ticket Booking System ---\n");
        printf("1. Add Booking\n");
        printf("2. Process Booking\n");
        printf("3. Display Bookings\n");
        printf("4. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("Enter booking name/code: ");
            scanf("%s", name);
            insertBooking(name);
            break;

        case 2:
            processBooking();
            break;

        case 3:
            displayBookings();
            break;

        case 4:
            exit(0);

        default:
            printf("Invalid choice\n");
        }
    }
    return 0;
}
